apt update
apt install libapr1-dev libaprutil1-dev libpcre3-dev

wget https://downloads.apache.org/httpd/httpd-2.4.63.tar.gz
tar -xvzf httpd-2.4.63.tar.gz
cd httpd-2.4.63

./configure --enable-mods-shared="all cgi" --enable-mpms-shared=all --enable-suexec --with-suexec-caller=www-data --with-suexec-docroot=/var/www --with-suexec-logfile=/var/log/apache2/suexec.log --with-suexec-userdir=public_html --with-suexec-uidmin=100 --with-suexec-gidmin=100 --with-pcre=/usr


make
sudo make install

/usr/local/apache2/bin/apachectl -v

/usr/local/apache2/bin/apachectl start


-- Installer GCC
apt install build-essential

apt install libc6-dev

